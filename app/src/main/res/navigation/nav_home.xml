<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.detectiveapplication.feature.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_notificationFragment"
            app:destination="@id/notificationFragment" />
    </fragment>
    <fragment
        android:id="@+id/followingFragment"
        android:name="com.example.detectiveapplication.ui.home.FollowingFragment"
        android:label="fragment_following"
        tools:layout="@layout/fragment_following" >
        <action
            android:id="@+id/action_followingFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_followingFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_followingFragment_to_notificationFragment"
            app:destination="@id/notificationFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.detectiveapplication.feature.case_.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="id"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/casesFragment"
        android:name="com.example.detectiveapplication.feature.cases.CasesFragment"
        android:label="fragment_cases"
        tools:layout="@layout/fragment_cases">
        <action
            android:id="@+id/action_casesFragment_to_createParentCaseFragment"
            app:destination="@id/createParentCaseFragment" />
        <action
            android:id="@+id/action_casesFragment_to_createStrangerCaseFragment"
            app:destination="@id/createStrangerCaseFragment" />
        <action
            android:id="@+id/action_casesFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_casesFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_casesFragment_to_notificationFragment"
            app:destination="@id/notificationFragment" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.detectiveapplication.feature.search_result.ResultFragment"
        android:label="fragment_result"
        tools:layout="@layout/fragment_result" >
        <action
            android:id="@+id/action_resultFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <argument
            android:name="recognitionResponse"
            app:argType="com.example.detectiveapplication.dto.recognition.RecognitionResponse"
            app:nullable="true" />
        <action
            android:id="@+id/action_resultFragment_to_faceDetectionFragment"
            app:destination="@id/faceDetectionFragment" />
    </fragment>
    <fragment
        android:id="@+id/watingCasesFragment"
        android:name="com.example.detectiveapplication.ui.home.watingCases.WatingCasesFragment"
        android:label="fragment_wating_cases"
        tools:layout="@layout/fragment_wating_cases">
        <action
            android:id="@+id/action_watingCasesFragment_to_settingFragment"
            app:destination="@id/settingFragment"
            app:popUpTo="@id/watingCasesFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_watingCasesFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/createParentCaseFragment"
        android:name="com.example.detectiveapplication.feature.create_case.CreateParentCaseFragment"
        android:label="fragment_create_parent_case"
        tools:layout="@layout/fragment_create_parent_case">
        <action
            android:id="@+id/action_createParentCaseFragment_to_casesFragment"
            app:destination="@id/casesFragment"
            app:popUpTo="@id/createParentCaseFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_createParentCaseFragment_to_watingCasesFragment"
            app:destination="@id/watingCasesFragment" />
    </fragment>
    <fragment
        android:id="@+id/createStrangerCaseFragment"
        android:name="com.example.detectiveapplication.feature.create_case.CreateStrangerCaseFragment"
        android:label="fragment_create_stranger_case"
        tools:layout="@layout/fragment_create_stranger_case">
        <action
            android:id="@+id/action_createStrangerCaseFragment_to_casesFragment"
            app:destination="@id/casesFragment"
            app:popUpTo="@id/createStrangerCaseFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.detectiveapplication.feature.edit_profile.EditProfileFragment"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile">
        <action
            android:id="@+id/action_editProfileFragment_to_settingFragment"
            app:destination="@id/settingFragment"
            app:popUpTo="@id/editProfileFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="userProfile"
            app:argType="com.example.detectiveapplication.dto.profile_data.UserProfileInfo"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.detectiveapplication.feature.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_detailsFragment"
            app:destination="@id/detailsFragment"
            app:popUpTo="@id/searchFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_searchFragment_to_filterFragment"
            app:destination="@id/filterFragment" />
        <argument
            android:name="name"
            app:argType="string" />
        <argument
            android:name="city"
            app:argType="string" />
        <argument
            android:name="age"
            app:argType="string" />
        <argument
            android:name="from"
            app:argType="string" />
        <argument
            android:name="to"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.example.detectiveapplication.feature.settings.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting">
        <action
            android:id="@+id/action_settingFragment_to_watingCasesFragment"
            app:destination="@id/watingCasesFragment" />
        <action
            android:id="@+id/action_settingFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
        <action
            android:id="@+id/action_settingFragment_to_registrationActivity"
            app:destination="@id/registrationActivity" />
    </fragment>
    <activity
        android:id="@+id/registrationActivity"
        android:name="com.example.detectiveapplication.navigation.login.RegistrationActivity"
        android:label="activity_registration"
        tools:layout="@layout/activity_registration" />
    <fragment
        android:id="@+id/faceDetectionFragment"
        android:name="com.example.detectiveapplication.feature.home.faceDetection.FaceDetectionFragment"
        android:label="fragment_face_detection"
        tools:layout="@layout/fragment_face_detection" >
        <action
            android:id="@+id/action_faceDetectionFragment_to_resultFragment"
            app:destination="@id/resultFragment"
            app:popUpTo="@id/faceDetectionFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.example.detectiveapplication.feature.notification.NotificationFragment"
        android:label="fragment_notification"
        tools:layout="@layout/fragment_notification" >
        <action
            android:id="@+id/action_notificationFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <dialog
        android:id="@+id/filterFragment"
        android:name="com.example.detectiveapplication.feature.filter.FilterFragment"
        android:label="fragment_filter"
        tools:layout="@layout/fragment_filter" >
        <action
            android:id="@+id/action_filterFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:popUpTo="@id/filterFragment"
            app:popUpToInclusive="true" />
    </dialog>
</navigation>