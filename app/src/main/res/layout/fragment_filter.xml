<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".feature.filter.FilterFragment">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etCityInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:autofillHints="creditCardExpirationDate"
        android:hint="@string/capital"
        android:textColorHint="@color/textColorHint"
        app:boxBackgroundColor="@color/boxBackgroundColor"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNameInputLayout"
        tools:targetApi="o">

        <AutoCompleteTextView
            android:id="@+id/etCityAutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_weight="1"
            android:fontFamily="@font/din_next_arabic_medium"
            android:inputType="none"
            android:textAlignment="viewStart"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etNameInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:autofillHints="name"
        android:focusedByDefault="true"
        android:hint="@string/name"
        android:textColorHint="@color/textColorHint"
        app:boxBackgroundColor="@color/boxBackgroundColor"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeErrorColor="@color/red"
        app:boxStrokeWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18"
        tools:targetApi="o">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_weight="1"
            android:fontFamily="@font/din_next_arabic_medium"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etAgeInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:autofillHints="creditCardExpirationDate"
        android:focusedByDefault="true"
        android:hint="@string/birth_date"
        android:textColorHint="@color/textColorHint"
        app:boxBackgroundColor="@color/boxBackgroundColor"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCityInputLayout"
        tools:targetApi="o">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAge"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_weight="1"
            android:fontFamily="@font/din_next_arabic_medium"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/din_next_arabic_bold"
        android:text="بحث مفصل"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintStart_toEndOf="@+id/back"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/etSecondNameInputLayout"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/boxBackgroundColor"
        android:backgroundTint="@color/boxBackgroundColor"
        app:boxBackgroundColor="@color/boxBackgroundColor"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/etFirstNameInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etFirstNameInputLayout"
        app:layout_constraintTop_toTopOf="@+id/etFirstNameInputLayout"
        tools:targetApi="o">

        <TextView
            android:id="@+id/etSecondKidnappedDate"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/din_next_arabic_medium"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="الى"
            android:textColor="#6D6D75"
            android:textSize="16sp" />

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/etFirstNameInputLayout"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/boxBackgroundColor"
        android:backgroundTint="@color/boxBackgroundColor"
        app:boxBackgroundColor="@color/boxBackgroundColor"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:layout_constraintEnd_toStartOf="@id/etSecondNameInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etAgeInputLayout"
        tools:targetApi="o">

        <TextView
            android:id="@+id/etFirstKidnappedDate"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/din_next_arabic_medium"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="من"
            android:textColor="#6D6D75"
            android:textSize="16sp" />


    </com.google.android.material.card.MaterialCardView>


    <Button
        android:id="@+id/btn_search_button"
        style="@style/ShapeAppearance.App.SmallComponent"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/din_next_arabic_medium"
        android:text="بحث"
        android:backgroundTint="@color/purple_200"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etFirstNameInputLayout" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/boxBackgroundColor"
        app:cardCornerRadius="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:rotation="180"
            android:src="@drawable/ic_back" />
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>